@model IEnumerable<FSWDFinalProject.DATA.EF.Position>

@{
    ViewBag.Title = "Positions";
}

<section id="resent-job-post" class="background-color-white">
    <div class="vertical-space-85"></div>
    <div class="container text-center">
        <h3 class="text-center">@ViewBag.Title</h3>
        <div class="vertical-space-30"></div>

        <p id="positionCreate">
            <a href="@Url.Action("Create", "Positions")" class="font-color-orange">Add a Position</a>
        </p>
        <div class="vertical-space-60"></div>

        <div class="detail">
            <table class="table">
                <tr>
                    <th></th>
                    <th>
                        @Html.DisplayNameFor(model => model.Title)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.JobDescription)
                    </th>
                    <th></th>
                </tr>

                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @*@Html.DisplayFor(modelItem => item.PositionImage)*@
                            <img src="~/Content/images/Positions/@item.PositionImage" alt="Position Icon" title="@item.Title" />
                        </td>
                        <td>
                            <a href="@Url.Action("Details", "Positions", new { id=item.PositionId})" class="font-color-black">@item.Title</a>
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.JobDescription)
                        </td>
                        <td>
                            <a href="@Url.Action("Edit","Positions", new { id=item.PositionId})" class="font-color-orange">Edit |</a>
                            <a href="@Url.Action("Delete","Positions", new { id=item.PositionId})" class="font-color-orange">Delete</a>
                        </td>
                    </tr>
                }

            </table>
        </div>
    </div>
</section>