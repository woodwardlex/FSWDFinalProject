@model FSWDFinalProject.DATA.EF.Location

@{
    ViewBag.Title = Model.StoreNumber;
}

<section id="resent-job-post" class="background-color-white">
    <div class="vertical-space-85"></div>
    <div class="container text-center">
        <h3 class="text-center">@ViewBag.Title</h3>
        <div class="vertical-space-30"></div>
        <div class="vertical-space-60"></div>
        <div class="detail">

            <dl class="dl-horizontal">
                <dt>
                    @Html.DisplayNameFor(model => model.Address)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.Address)
                </dd>

                <dt>
                    @Html.DisplayNameFor(model => model.UserDetail.FullName)
                </dt>

                <dd>
                    @Html.DisplayFor(model => model.UserDetail.FullName)
                </dd>

            </dl>
            <div class="media-body text-right text-align-center">
                @if (User.IsInRole("Admin") || User.IsInRole("Manager"))
                {
                    <a href="@Url.Action("Edit","OpenPositions")" class="font-color-orange">Edit |</a>
                    <a href="@Url.Action("Delete","OpenPositions")" class="font-color-orange">Delete</a>
                }
            </div>
        </div>
    </div>
</section>